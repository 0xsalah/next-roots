{
  "compilerOptions": {
    "target": "es5",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": "src"
  },
  "include": ["src", "bin"],
  "exclude": ["**/node_modules", "dist", "__tests__"]
}
