{
  "name": "next-i18n-rewrites",
  "version": "0.0.6",
  "description": "Next.js utility to generate i18n pages according to custom rewrites rules.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "context.d.ts",
    "context.js",
    "link.js",
    "link.d.js",
    "meta.js",
    "meta.d.js"
  ],
  "bin": {
    "next-i18n-rewrites": "./dist/bin/builder.js"
  },
  "scripts": {
    "prepublish": "yarn test",
    "build": "rollup -c",
    "clean": "rm -rf dist > /dev/null",
    "format": "pretty-quick",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@node-minify/core": "^5.3.0",
    "@node-minify/terser": "^5.3.0",
    "@types/jest": "25.2.3",
    "@types/react": "^16.9.35",
    "colors": "^1.4.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "next": "^9.4.4",
    "path-to-regexp": "^6.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.12.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-ts": "^1.2.24",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.2"
  },
  "peerDependencies": {
    "next": "^9.4.4",
    "react": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn test"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "license": "MIT",
  "keywords": [
    "react",
    "next",
    "nextjs",
    "next.js",
    "rewrites",
    "routes",
    "localization",
    "localized",
    "locale",
    "static"
  ],
  "author": {
    "name": "Jirka Svoboda",
    "email": "svobik7@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/svobik7/next-i18n-rewrites"
  }
}
